<div class="container">
  <div class="d-flex justify-content-left align-items-center">
    <h2 class="text-uppercase py-3 m-0">Restaurant: <%= @restaurant.name %></h2>
  </div>
  <div>
    <h3 class="mt-3">Info of the restaurant</h3>
    <p class="mt-3">Address: <%= @restaurant.address %></p>
    <p class="mt-3">Phone Number: <%= @restaurant.phone_number %></p>
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center shadow">
          <p> <%= review.content %> </p>
          <p> <%= '<i class="fa-solid fa-star" ></i>'.html_safe * review.rating.to_i %> </p>
        </li>
      <% end %>
    </ul>
    <br>
    <div class="container">
      <h2 class="text-uppercase">Create a New Review</h2>
    </div>
    <div class="container">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="d-flex justify-content-left align-items-center">
      <%= link_to 'Back To Index', restaurants_path, :class => "btn btn-primary m-2" %>
    </div>
  </div>
</div>
